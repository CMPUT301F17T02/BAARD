<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baard.CreateNewHabitFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/input"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/newHabit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHabit_title" />

        <View
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondary"/>

        <TextView
            android:id="@+id/newHabit_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@null"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHabit_reason" />

        <View
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondary"/>

        <TextView
            android:id="@+id/newHabit_startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reason" />

        <EditText
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@null"
            android:layout_marginTop="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHabit_startDate" />

        <View
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondary"/>

        <TextView
            android:id="@+id/newHabit_daysOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Days of the Week"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startDate" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newHabit_daysOfWeek">

            <ToggleButton
                android:id="@+id/sun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/toggle_button"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Sun"
                android:textAlignment="center"
                android:textOff="Sun"
                android:textOn="Sun"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="74dp"
                tools:layout_editor_absoluteY="366dp" />

            <ToggleButton
                android:id="@+id/mon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/toggle_button"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Mon"
                android:textAlignment="center"
                android:textOff="Mon"
                android:textOn="Mon"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="399dp" />

            <ToggleButton
                android:id="@+id/tue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/toggle_button"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Tues"
                android:textAlignment="center"
                android:textOff="Tue"
                android:textOn="Tue"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="250dp"
                tools:layout_editor_absoluteY="447dp" />

            <ToggleButton
                android:id="@+id/wed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_button"
                android:textColor="@color/white"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Wed"
                android:textAlignment="center"
                android:textOff="Wed"
                android:textOn="Wed"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="343dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <ToggleButton
                android:id="@+id/thu"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_button"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Thu"
                android:textAlignment="center"
                android:textOff="Thu"
                android:textOn="Thu"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="447dp" />

            <ToggleButton
                android:id="@+id/fri"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_button"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Fri"
                android:textAlignment="center"
                android:textOff="Fri"
                android:textOn="Fri"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="432dp" />

            <ToggleButton
                android:id="@+id/sat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_button"
                android:textColor="@color/white"
                android:checked="false"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Sat"
                android:textAlignment="center"
                android:textOff="Sat"
                android:textOn="Sat"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="414dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/create"

        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="20dp"
        android:text="@string/create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


</android.support.constraint.ConstraintLayout>