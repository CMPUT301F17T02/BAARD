<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitle.Transulcent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:typeface">serif</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ToggleButtonStyle">
        <item name="android:background">@drawable/input</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ErrorStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color4Dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="fontPath">fonts/Raleway_Regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
